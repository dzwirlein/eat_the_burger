
<div class = "container">
    <div class ="row">
        <div class = "col-xs-12 text-center" id= "top">
            <h1>Eat The Burger</h1>
        </div>
        <div class ="col-xs-6 text-center" class="task">
            <div class = "row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class = "col-xs-9 text-center">
                   <p> {{this.id}}. {{this.burger_name}} </p>
                </div>
                <div class="col-xs-3 text-center">
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="button-size">
                        <button type="submit" class="btn btn-default">Devour It!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <br>

        <div class="col-xs-6 text-center" class='task'>
                {{#each burger_data}}
                {{#if this.devoured}}
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}} 
        </div>


    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" id="enter_text">
            <button type="submit" class="btn btn-primary" id="enter-button">Add a Burger</button>
            </form>
            <p>What kind of burger would you like to eat?</p>
        </div>
    </div>
</div>